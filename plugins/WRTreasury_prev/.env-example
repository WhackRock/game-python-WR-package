# WhackRock Treasury Plugin - Environment Variables Example
# Copy this file to .env and fill in your specific values

# Base network RPC endpoint (required)
BASE_RPC="https://mainnet.base.org"
# Alternative: Use Infura, Alchemy, or other provider
# BASE_RPC="https://base-mainnet.infura.io/v3/YOUR_API_KEY"

# Testnet RPC (optional, for development)
BASE_TESTNET_RPC="https://sepolia.base.org"

# Vault Configuration
# Your WeightedTreasuryVault address
TREASURY_VAULT_ADDRESS="0xYourVaultAddress"

# Private key for signing transactions (KEEP SECURE!)
# DO NOT commit this to git when using a real key
# Consider using environment variables or a secure vault in production
TREASURY_SIGNER_KEY="0xYourPrivateKey"

# Fee and Rebalance Configuration
# Rebalance threshold in basis points (200 = 2%)
REBALANCE_THRESHOLD_BPS=200

# Default slippage tolerance in basis points (30 = 0.3%)
# Increase for volatile tokens, decrease for stablecoins
DEFAULT_SLIPPAGE_BPS=30

# Token Addresses
# Depending on your specific strategy, you might need these
# stETH="0x1643E812aE58766192Cf7D2Cf9567dF2C37e9B7F" # Base mainnet
# WBTC="0x1A35EE4640b0A3B87705B0A4B45D227Ba60Ca2c7"  # Base mainnet

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL